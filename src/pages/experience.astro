---
import { WORK } from '../lib/constants'
import BaseLayout from '../layouts/BaseLayout.astro'
// import TopLayout from '../layouts/TopLayout.astro'
// import BottomLayout from '../layouts/BottomLayout.astro'

import { EXPERIENCE } from '../lib/constants'
import Card from '../components/Card.astro'
import Container from '../components/Container.astro'
---

<BaseLayout title={WORK.TITLE} description={WORK.DESCRIPTION}>
  <main class="flex flex-auto flex-col" transition:animate="fade">
    <h2 class="dark:text-primary py-4 pl-6 text-3xl font-semibold">
      {WORK.TITLE}
    </h2>
    <Container styling="py-5 flex flex-col gap-4">
      {
        EXPERIENCE.map((entry) => (
          <Card styling="flex flex-col gap-4">
            <div slot={'content'}>
              <div class="mb-4 text-sm uppercase">
                {entry.start} - {entry.end}
              </div>
              <h3 class={`text-primary font-semibold`}>{entry.company}</h3>
              <div class="text-sm font-semibold">{entry.position}</div>
              {entry.tasks.map((i) => {
                if (entry.tasks.length > 1) {
                  return (
                    <ul class="prose dark:prose-invert list-outside list-disc space-y-2 pl-6">
                      <li>{i}</li>
                    </ul>
                  )
                }

                return <p>{i}</p>
              })}
            </div>
            <div slot="footer" class="flex flex-wrap gap-1">
              {entry.tools.map((tool) => (
                <Card styling="px-4 py-2 bg-orange-500/20 backdrop-blur-md border border-orange-400/30 text-orange-200 rounded-full text-sm text-center">
                  <p slot="content">{tool}</p>
                </Card>
              ))}
            </div>
          </Card>
        ))
      }
    </Container>
  </main>
</BaseLayout>

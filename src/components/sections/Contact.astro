---
import { Github, Linkedin, Mail, Phone } from 'lucide-react'
import { buttonVariants } from '../ui/button'
import { LINKS } from '../../lib/constants'

const buttonClass = buttonVariants({ variant: 'ghost' })
const cv = '/cv.pdf'

interface Props {
  styling?: string
}

const { styling } = Astro.props
---

<div class={styling}>
  <a
    href={cv}
    target="_blank"
    rel="noreferrer"
    class="text-sm underline-offset-4 hover:underline"
  >
    Resume
  </a>
  <a href={LINKS.tel} target="_blank" rel="noreferrer" class={buttonClass}>
    <Phone size={15} />
  </a>
  <a href={LINKS.github} target="_blank" rel="noreferrer" class={buttonClass}>
    <Github size={15} />
  </a>
  <a href={LINKS.email} target="_blank" rel="noreferrer" class={buttonClass}>
    <Mail size={15} />
  </a>
  <a href={LINKS.linkedin} target="_blank" rel="noreferrer" class={buttonClass}>
    <Linkedin size={15} />
  </a>
</div>

---
import { Github, Mail, Linkedin, Phone } from 'lucide-react'
import { buttonVariants } from '../components/ui/button'
import { ModeToggle } from '../components/ui/ThemeToggle'
import { LINKS } from '../lib/constants'

const buttonClass = buttonVariants({ variant: 'ghost' })
const cv = '/cv.pdf'
---

<script is:inline>
  document.addEventListener('astro:after-swap', function () {
    if (localStorage.getItem('theme') === 'dark')
      document.documentElement.classList.toggle('dark', true)
  })

  const getThemePreference = () => {
    return localStorage.getItem('theme')
  }

  const isDark = getThemePreference() === 'dark'
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark')
</script>

<header
  class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div
    class="container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0"
  >
    <div class="flex gap-6 md:gap-10">
      <a href="/" class="flex items-center space-x-2">
        <span class="inline-block font-bold">/</span>
      </a>
    </div>
    <nav class="flex flex-1 items-center items-center justify-end space-x-4">
      <div class="hidden md:block">
        <a
          href={cv}
          target="_blank"
          rel="noreferrer"
          class="text-sm underline-offset-4 hover:underline"
        >
          Resume
        </a>
        <a
          href={LINKS.tel}
          target="_blank"
          rel="noreferrer"
          class={buttonClass}
        >
          <Phone size={15} />
        </a>
        <a
          href={LINKS.github}
          target="_blank"
          rel="noreferrer"
          class={buttonClass}
        >
          <Github size={15} />
        </a>
        <a
          href={LINKS.email}
          target="_blank"
          rel="noreferrer"
          class={buttonClass}
        >
          <Mail size={15} />
        </a>
        <a
          href={LINKS.linkedin}
          target="_blank"
          rel="noreferrer"
          class={buttonClass}
        >
          <Linkedin size={15} />
        </a>
      </div>

      <ModeToggle transition:persist client:load />
    </nav>
  </div>
</header>
